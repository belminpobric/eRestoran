@model eRestoran.Models.Meni
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .detaljiContainer {
        padding: 30px;
        background-color: #f4f4f4;
        height: 100%;
        padding-top: 100px;
    }

    .sectionDetalji {
        display: flex;
    }

        .sectionDetalji > img {
            flex-basis: 40%;
            padding-top: 20px;
        }

        .sectionDetalji .Opis {
            flex-basis: 60%;
            padding-left: 30px;
            padding-top: 100px;
        }
    h3 {
        background-color: #f4f4f4;
        margin:0;
        padding-top:25px;
    }
</style>
<h3>
    Da li ste sigurni da želite naručiti sljedeće jelo?
</h3>

<div class="detaljiContainer">
    <h4 style="color:gray; letter-spacing:3px;">@Model.Naziv</h4>
    <div class="sectionDetalji">
        <img src="@Model.LinkZaSliku" alt="Slika" style="width:400px;" />
        <div class="Opis">
            <p>@Model.Opis</p>
            <div class="text" style="width:170px;"><a asp-action="Snimi" asp-controller="Narudzbe" asp-route-id="@Model.Id">NARUČI</a></div>
        </div>
    </div>
</div>